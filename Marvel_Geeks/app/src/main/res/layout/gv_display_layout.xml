<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_category_display"
        android:layout_width="150dp"
        android:layout_height="152dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Verify_email_address"
        android:textAlignment="center"
        android:textColor="@color/textDisplayColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_category_display"
        app:layout_constraintStart_toStartOf="@+id/iv_category_display"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_display" />

</androidx.constraintlayout.widget.ConstraintLayout>